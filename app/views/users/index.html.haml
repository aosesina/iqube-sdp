%table.table.table-stripped.table-bordered
  %caption All Users, Iqubers and Non Iqubers
  %thead
    %th Name
    %th Email
    %th Phone
    %th Iquber
    %th Status
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= user.phone
        %td= user.iquber
        %td= user.status
        %td
          %ico.icon-edit
            = link_to "edit", user.status, :class=>:btn
        %td
          %icon.icon-edit
            = link_to "approve", "#", :class=>"btn delete_post", :confirm=> "are you sure?", :remote=>true
